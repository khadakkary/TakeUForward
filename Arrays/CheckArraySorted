class Solution {
    public boolean check(int[] nums) {
        int j=1,n=nums.length;
        for(int i=0;i<n;i++){
            if(j==n){
                return true;
            }
            else if(nums[i+1]>=nums[i]){
                j++;
                continue;
            }
            break;
        }
        for(int i=0;i<n-1;i++){
            if(nums[(i+j)%n]>nums[(i+j+1)%n]){
                return false;
            }
        }
        return true;
    }
}
